@model IEnumerable<BulkyBook.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form class="form-inline" method="post" asp-action="Index">
    <div class="form-group mx-sm-3 mb-2">
        <input name="searchInput" type="search" class="form-control" placeholder="Search heare...">
    </div>
    <button type="submit" class="btn btn-primary mb-2">Search</button>
</form>

<div class="row pb-3 backgroundWhite">
    @if (Model.Count() == 0)
    {
        <p class="mx-sm-3 mt-3">There is no book in the list.</p>
    }
    else
    {
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                        <div class="card" style="border:0px;">
                            <img src="@product.ImageUrl" class="card-img-top rounded img-thumbnail img-responsive" style="height:300px;width:100%;" />
                            <div class="pl-1">
                                <p class="card-title h5"><b style="color:#2c3e50">@product.Title</b></p>
                                <p class="card-title text-primary">by <b>@product.Author</b></p>
                            </div>
                            <div style="padding-left:5px;">
                                <p>Price: <b class="">@product.Price $</b></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Detail" asp-route-id="@product.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    }
</div>

