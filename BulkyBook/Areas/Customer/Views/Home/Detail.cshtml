@model BulkyBook.Models.ReqAccess

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Details</h1>


<form  asp-action="Detail"  method="post">
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" value="@Model.Status" id="status" />
    <div class="container backgroundWhite">
        <div class="card p-4">
            <div class="container row">
                <dl class="col-12 col-md-8 row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Product.Title)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Product.Title)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Product.Description)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Product.Description)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Product.Author)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Product.Author)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Product.Price)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Product.Price)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Product.Category)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Product.Category.Name)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Product.CoverType)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Product.CoverType.Name)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                </dl>
                <div class="col-12 col-md-4">
                    <img src="  @Html.DisplayFor(model => model.Product.ImageUrl)" class="card-img-top rounded" />
                </div>
            </div>

            <div class="col-12 col-md-3">
                <button type="submit" class="btn btn-primary btn-square btn-lg form-control" onclick="return validateStatus()">Read</button>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</form>


<script>
    function validateStatus() {
        var status = document.getElementById("status").value;
        switch (status) {
            case "Block":
                if (confirm("Request to accept this book")) {
                    return true;
                } else {
                    return false;
                }
                break;
            case "InProcess":
                swal({
                    text: "Your request is on process",
                });
                return false;
                break;
            case "Rejected":
                swal({
                    text: "You can not access this book",
                });
                return false;
                break;
            default:
                return true;
                break;
        }
       
    }
</script>

