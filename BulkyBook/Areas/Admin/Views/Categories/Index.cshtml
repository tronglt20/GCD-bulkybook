@model IEnumerable<BulkyBook.Models.Category>

@{
    ViewData["Title"] = "Category Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row d-flex justify-content-between p-3">
    <div>
        <h3>Category's List</h3>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary btn-square btn-lg form-control">Create New</a>
    </div>
</div>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    var Id = item.Id;

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
         
            <td class="row">
                <a asp-action="Edit" asp-route-id="@item.Id" class="m-2">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="m-2">Details</a> |
                <form asp-action="Delete" class="ml-2">
                    <input type="hidden" asp-for="@Id" />
                    <button type="submit" class="btn btn-danger" onclick="return deleteObject()">Delete</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
